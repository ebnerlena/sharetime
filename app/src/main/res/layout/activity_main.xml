<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/profilePicture"
        android:layout_width="80dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintDimensionRatio="h,1:1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/amy"
         />

    <TextView
        android:id="@+id/postNr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="999"
        android:textAlignment="center"
        android:textAppearance="@style/fameNrsBold"
        app:layout_constraintBottom_toTopOf="@id/posts"
        app:layout_constraintEnd_toEndOf="@id/posts"
        app:layout_constraintLeft_toRightOf="@id/profilePicture"
        app:layout_constraintRight_toLeftOf="@id/followersNr"
        app:layout_constraintStart_toStartOf="@id/posts"
        app:layout_constraintTop_toTopOf="@id/profilePicture" />

    <TextView
        android:id="@+id/posts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Posts"
        android:textAlignment="center"
        android:textAppearance="@style/fameNrsLabel"
        app:layout_constraintBottom_toBottomOf="@id/profilePicture"
        app:layout_constraintEnd_toStartOf="@id/followers"
        app:layout_constraintLeft_toRightOf="@id/profilePicture"
        app:layout_constraintRight_toLeftOf="@id/followers"
        app:layout_constraintStart_toEndOf="@id/profilePicture"
        app:layout_constraintTop_toBottomOf="@id/postNr" />


    <TextView
        android:id="@+id/followersNr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1337"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textAppearance="@style/fameNrsBold"
        app:layout_constraintBottom_toTopOf="@id/followers"
        app:layout_constraintEnd_toEndOf="@id/followers"
        app:layout_constraintLeft_toRightOf="@id/posts"
        app:layout_constraintRight_toLeftOf="@id/followingNr"
        app:layout_constraintStart_toStartOf="@id/followers"
        app:layout_constraintTop_toTopOf="@id/profilePicture" />

    <TextView
        android:id="@+id/followers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Followers"
        android:textAlignment="center"
        android:textAppearance="@style/fameNrsLabel"
        app:layout_constraintEnd_toStartOf="@id/following"
        app:layout_constraintStart_toEndOf="@id/posts"
        app:layout_constraintBottom_toBottomOf="@id/profilePicture"
        app:layout_constraintLeft_toRightOf="@id/posts"
        app:layout_constraintRight_toLeftOf="@id/following"
        app:layout_constraintTop_toBottomOf="@id/followersNr" />

    >
    <TextView
        android:id="@+id/followingNr"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="42"
        android:textAlignment="center"
        android:textAppearance="@style/fameNrsBold"
        app:layout_constraintEnd_toEndOf="@id/following"
        app:layout_constraintStart_toStartOf="@id/following"
        app:layout_constraintBottom_toTopOf="@id/following"
        app:layout_constraintLeft_toRightOf="@id/followers"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/profilePicture" />

    <TextView
        android:id="@+id/following"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:text="Following"
        android:textAlignment="center"
        android:textAppearance="@style/fameNrsLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/followers"
        app:layout_constraintBottom_toBottomOf="@id/profilePicture"
        app:layout_constraintLeft_toRightOf="@id/followers"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/followingNr" />

    <Button
        android:id="@+id/editButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Edit"
        app:layout_constraintTop_toTopOf="@id/following"
        app:layout_constraintLeft_toRightOf="@id/followers"
        app:srcCompat="@drawable/amy"
        />

    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tina Ubuntu"
        android:layout_marginTop="20dp"
        android:textAppearance="@style/CustomHeadline"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/profilePicture" />

    <TextView
        android:id="@+id/description"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:textSize="15sp"
        android:textColor="@color/text_grey"
        app:layout_constraintBottom_toTopOf="@id/something"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/name"
        tools:text="@tools:sample/lorem/random" />

    <View
        android:id="@+id/something"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FF8A93"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/description" />


</androidx.constraintlayout.widget.ConstraintLayout>